<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="BackgroundColor">White</Color>
    <Color x:Key="ForegroundColor">Black</Color>

    <SolidColorBrush x:Key="MainBackground" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="MainForeground" Color="{StaticResource ForegroundColor}"/>

    <SolidColorBrush x:Key="TextColor" Color="Black"/>

</ResourceDictionary>