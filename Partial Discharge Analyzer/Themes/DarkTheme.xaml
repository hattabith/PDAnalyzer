<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="BackgroundColor">#FF1E1E1E</Color>
    <Color x:Key="ForegroundColor">White</Color>

    <SolidColorBrush x:Key="MainBackground" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="MainForeground" Color="{StaticResource ForegroundColor}"/>

    <SolidColorBrush x:Key="TextColor" Color="White"/>
</ResourceDictionary>