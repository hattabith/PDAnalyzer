<Window x:Class="Partial_Discharge_Analyzer.AddIpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Partial_Discharge_Analyzer"
        mc:Ignorable="d"
        Title="Add IP Address" Height="150" Width="300" WindowStartupLocation="CenterOwner">


    <StackPanel Margin="10">
        <TextBlock Text="IP Address:"/>
        <TextBox x:Name="IpTextBox" Margin="0,5"/>

        <TextBlock Text="Port (optional):"/>
        <TextBox x:Name="PortTextBox" Margin="0,5"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="75" Margin="0,0,5,0" Click="Ok_Click"/>
            <Button Content="Cancel" Width="75" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
    
</Window>
